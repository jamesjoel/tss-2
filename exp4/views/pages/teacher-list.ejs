<%- include("../includes/header") %>
<div class="container my-4" style="min-height: 700px;">
    <h1>List All Teacher </h1>
    <div class="row">
        <div class="col-md-12">
            <% if(result.length > 0){ %>
                <table class="table table-dark table-hover">
                    <tr>
                        <th>S.No.</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Detail</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
    
                    <% result.forEach((x, n)=>{ %>
                        <tr>
                            <td><%= n+1 %></td>
                            <td><%= x.name %></td>
                            <td><%= x.email %></td>
                            <td><a href="/teacher/detail/<%= x._id %>" class="btn btn-info btn-sm">Detail</a></td>
                            <td><a href="/teacher/edit/<%= x._id %>" class="btn btn-warning btn-sm">Edit</a></td>
                            <td><a href="/teacher/delete/<%= x._id %>" class="btn btn-danger btn-sm">Delete</a></td>
                        </tr>
                    <% })  %>
    
                </table>
            <% }else{ %>
                <div class="alert alert-danger">No Data Found</div>
            <% } %>
        </div>
    </div>
    
</div>
<%- include("../includes/footer") %>

